                                "events": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "DictionaryTypedResource": {
                "required": [
                    "uuid",
                    "name"
                ],
                "properties": {
                    "uuid": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "breed": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/DictionaryTypedResource"
                        }
                    },
                    "children": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/DictionaryTypedResource"
                        }
                    }
                },
                "type": "object"
            }
        }
    }
}