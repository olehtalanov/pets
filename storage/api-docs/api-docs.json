{
    "openapi": "3.0.0",
    "info": {
        "title": "Pets App API",
        "version": "1.0"
    },
    "paths": {
        "/api/animals": {
            "get": {
                "tags": [
                    "animals"
                ],
                "summary": "Get list of user animals.",
                "operationId": "33ea37fa99c2d039345ee028491a5fda",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AnimalListItemResource"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "animals"
                ],
                "summary": "Create new animal.",
                "operationId": "d2201701adacfd22417c6637db81b633",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "sex",
                                    "birth_date",
                                    "breed_name",
                                    "weight",
                                    "weight_unit"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fluffy"
                                    },
                                    "sex": {
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "example": "2021-06-22"
                                    },
                                    "animal_type": {
                                        "type": "string",
                                        "example": "995037a6-5811-4ace-b1f7-4667517dd6e0",
                                        "nullable": true
                                    },
                                    "custom_animal_type": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "custom_breed_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "breed_name": {
                                        "type": "string"
                                    },
                                    "metis": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "double",
                                        "example": "2.5"
                                    },
                                    "weight_unit": {
                                        "type": "string",
                                        "example": "kg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/animals/{uuid}": {
            "get": {
                "tags": [
                    "animals"
                ],
                "summary": "Get animal details.",
                "operationId": "283398fd9008666083b94ffe0cc55e79",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "animals"
                ],
                "summary": "Delete an animal.",
                "operationId": "a5cab3bbd8b70f62c1f1ed660a3ca927",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful response"
                    }
                }
            },
            "patch": {
                "tags": [
                    "animals"
                ],
                "summary": "Update existing animal.",
                "operationId": "95650581bc570bfeb2c0f683b3854fc2",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "sex",
                                    "birth_date",
                                    "breed_name",
                                    "weight",
                                    "weight_unit"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fluffy"
                                    },
                                    "sex": {
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "example": "2021-06-22"
                                    },
                                    "animal_type": {
                                        "type": "string",
                                        "example": "995037a6-5811-4ace-b1f7-4667517dd6e0",
                                        "nullable": true
                                    },
                                    "custom_animal_type": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "custom_breed_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "breed_name": {
                                        "type": "string"
                                    },
                                    "metis": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "double",
                                        "example": "2.5"
                                    },
                                    "weight_unit": {
                                        "type": "string",
                                        "example": "kg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/dictionaries": {
            "get": {
                "tags": [
                    "dictionaries"
                ],
                "summary": "Get list of required dictionaries.",
                "operationId": "d054aa8a0daf6fd98b427a00b66ff895",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "types": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/components/schemas/DictionaryTypedResource"
                                                }
                                            },
                                            "pins": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/components/schemas/DictionaryTypedResource"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Get user details.",
                "operationId": "bfe1d8ee397d4e8589fee09919f74751",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserFullResource"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
