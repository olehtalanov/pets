        "/api/animals": {
            "get": {
                "tags": [
                    "Animals"
                ],
                "summary": "Get list of user animals.",
                "operationId": "33ea37fa99c2d039345ee028491a5fda",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AnimalListItemResource"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Animals"
                ],
                "summary": "Create new animal.",
                "operationId": "d2201701adacfd22417c6637db81b633",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "sex",
                                    "birth_date",
                                    "breed_name",
                                    "weight",
                                    "weight_unit"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fluffy"
                                    },
                                    "sex": {
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "example": "2021-06-22"
                                    },
                                    "animal_type": {
                                        "type": "string",
                                        "example": "995037a6-5811-4ace-b1f7-4667517dd6e0",
                                        "nullable": true
                                    },
                                    "custom_animal_type": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "custom_breed_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "breed_name": {
                                        "type": "string"
                                    },
                                    "metis": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "double",
                                        "example": "2.5"
                                    },
                                    "weight_unit": {
                                        "type": "string",
                                        "example": "kg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            }
        },
