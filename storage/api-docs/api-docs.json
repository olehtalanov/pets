{
    "openapi": "3.0.0",
    "info": {
        "title": "Pets App API",
        "version": "1.0"
    },
    "paths": {
        "/animals": {
            "get": {
                "tags": [
                    "animals"
                ],
                "summary": "Get list of user animals.",
                "operationId": "9a489950fd27cd9c56fd59b937d0f501",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AnimalListItemResource"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "animals"
                ],
                "summary": "Create new animal.",
                "operationId": "34e7a0c362b9e5cd0abcd38155cc2c89",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "sex",
                                    "birth_date",
                                    "breed_name",
                                    "weight",
                                    "weight_unit"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fluffy"
                                    },
                                    "sex": {
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "example": "2021-06-22"
                                    },
                                    "animal_type": {
                                        "type": "string",
                                        "example": "995037a6-5811-4ace-b1f7-4667517dd6e0",
                                        "nullable": true
                                    },
                                    "custom_animal_type": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "custom_breed_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "breed_name": {
                                        "type": "string"
                                    },
                                    "metis": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "double",
                                        "example": "2.5"
                                    },
                                    "weight_unit": {
                                        "type": "string",
                                        "example": "kg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/animals/{uuid}": {
            "get": {
                "tags": [
                    "animals"
                ],
                "summary": "Get animal details.",
                "operationId": "cde72940ef9ffc4789bb8122dfd7002f",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "animals"
                ],
                "summary": "Delete an animal.",
                "operationId": "426a2ff683c8a6be61090b69100e0d4c",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful response"
                    }
                }
            },
            "patch": {
                "tags": [
                    "animals"
                ],
                "summary": "Update existing animal.",
                "operationId": "8585b5906140142af63219bf7ec4a67f",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "example": "995037a6-60b3-4055-aa14-3513aa9824ca"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "sex",
                                    "birth_date",
                                    "breed_name",
                                    "weight",
                                    "weight_unit"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fluffy"
                                    },
                                    "sex": {
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "example": "2021-06-22"
                                    },
                                    "animal_type": {
                                        "type": "string",
                                        "example": "995037a6-5811-4ace-b1f7-4667517dd6e0",
                                        "nullable": true
                                    },
                                    "custom_animal_type": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "breed": {
                                        "type": "string",
                                        "example": null,
                                        "nullable": true
                                    },
                                    "custom_breed_name": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "breed_name": {
                                        "type": "string"
                                    },
                                    "metis": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "double",
                                        "example": "2.5"
                                    },
                                    "weight_unit": {
                                        "type": "string",
                                        "example": "kg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AnimalFullResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/dictionaries": {
            "get": {
                "tags": [
                    "dictionaries"
                ],
                "summary": "Get list of required dictionaries.",
                "operationId": "4a623f174b667e7f1e5c70cc862d273e",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "types": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/components/schemas/DictionaryTypedResource"
                                                }
                                            },
                                            "pins": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/components/schemas/DictionaryTypedResource"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AnimalFullResource": {
                "properties": {
                    "uuid": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "birth_date": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "breed": {
                        "type": "string"
                    },
                    "sex": {
                        "type": "string"
                    },
                    "weight": {
                        "type": "string"
                    },
                    "avatar": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "thumb": {
                                    "type": "string"
                                },
                                "full": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "activiry": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "notes": {
                                    "type": "integer"
                                },
                                "events": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
