            "AnimalListItemResource": {
                "properties": {
                    "uuid": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "sex": {
                        "type": "string"
                    },
                    "avatar": {
                        "type": "string"
